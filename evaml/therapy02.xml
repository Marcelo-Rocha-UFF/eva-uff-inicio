<?xml version="1.0" encoding="UTF-8"?>

<evaml>
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<lighting-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
  <interaction id="12092021" name="Therapy02">
    <eva-emotion emotion="neutral" />
  	<light state="on" color="#ffffff" /> <!-- acende a luz branca -->
    <talk>Hi, I am robot EVA. I am a socially assistive robot. I will choose a number between 1 and 3</talk>
    <random min="1" max="3" />
    <switch>
      <case value="1">
        <light state="on" color="#ff0000" />
        <talk>I choose the number 1</talk>
        <goto target="END" />
      </case>
      <case value="2">
        <light state="on" color="#00ff00" />
        <talk>I choose the number 2</talk>
        <goto target="END" />
      </case>
      <case value="3">
        <light state="on" color="#0000ff" />
        <talk>I choose the number 3</talk>
        <goto target="END" />
      </case>
    </switch>
    <talk id="END">Bye</talk>
  </interaction>
  <macros>
  </macros>
</evaml>
