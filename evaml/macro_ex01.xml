<?xml version="1.0" encoding="UTF-8"?>
<evaml>
  <!-- global settings -->
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<lighting-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
  <!-- interação -->
	<interaction id="a1001-b3001" name="EvaML_Nodes">
    <!-- Saudação EVA -->
    <use-macro name="GREETINGS" />
    <!-- Controlando as cores -->
    <use-macro name="USING_THE_LIGHT" />
    <!-- Expressando emoções pelo olhar -->
    <use-macro name="EXPRESSING_EMOTIONS" />
	</interaction>
  <!-- secao de macros -->
  <macros>
    <macro name="GREETINGS">
      <!-- Eva apresentation -->
      <eva-emotion emotion="neutral" />
    	<light state="on" color="#ffffff" /> <!-- acende a luz branca -->
      <talk>Hi, I am robot EVA</talk>
    	<talk>I am a socially assistive robot</talk>
    </macro>
    <macro name="USING_THE_LIGHT">
      <!-- controlling the light -->
      <talk>I can also control the lighting</talk>
    	<light state="on" color="#ff0000" />
    	<wait duration="1500" /> <!-- duração em ms -->
    	<light state="on" color="#00ff00" />
    	<wait duration="1500" />
    	<light state="on" color="#0000ff" />
    	<wait duration="1500" />
    </macro>
    <macro name="EXPRESSING_EMOTIONS">
      <!-- expressing emotions through the eyes -->
    	<talk>I can express emotions through my eyes</talk>
    	<talk>I can express anger</talk>
    	<light state="on" color="#ff0000" />
      <eva-emotion emotion="anger" />
      <wait duration="3000" />
    	<talk>I can be sad</talk>
    	<light state="on" color="#0000ff" />
      <eva-emotion emotion="sad" />
      <wait duration="3000" />
    	<talk>I can be happy</talk>
    	<light state="on" color="#ffff00" />
      <eva-emotion emotion="joy" />
      <wait duration="3000" />
    	<eva-emotion emotion="neutral" />
    </macro>
  </macros>
</evaml>
